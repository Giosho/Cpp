// FirstCPP.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;  // This allows you to omit std:: every time

int main()
{
    string name;
    string pass;
    
    cout << "Enter Name" << endl;
    cin >> name;
    cout << "Enter Password" << endl;
    cin >> pass;

    if (name == "user" && pass == "pass123")
    {
        cout << "Welcome!" << endl;
        int mon = 2000;
        int nmon;
        string option;
        cout << "do you wanna add/take/view your money?" << endl;
        cin >> option;

        if (option == "add")
        {
            int add;

            cout << "How much do you want to add?" << endl;
            cin >> add;
            nmon = mon + add;

            cout << "Your balance is now: " << endl;
            cout << nmon << endl;
        }
        else if (option == "take")
        {
            int take;
            cout << "How much do you want to take?" << endl;
            cin >> take;

            nmon = mon - take;
            cout << "Your balance is now: " << endl;
            cout << nmon << endl;
        }
        else if (option == "view")
        {
            cout << "your balance is: " << endl;
            cout << mon << endl;
        }
        else
        {
            cout << "ERROR" << endl;
        }
    }
    else
    {
        cout << "wrong log in" << endl;
    }
    
}

// Run program: Ctrl + F5 or Debug > Start Without Debugging menu
// Debug program: F5 or Debug > Start Debugging menu

